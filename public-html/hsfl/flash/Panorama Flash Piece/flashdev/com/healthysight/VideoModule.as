package com.healthysight{	/*	//////////////////////////////////////////////////////	This module loads in a VideoPlayer object, as well as	a ShareVideo object. It's loaded into the shell swf for	the Healthy Sight website. Used to play videos and	share them with others.		-Chris Natale	/////////////////////////////////////////////////////	*/				import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.Event;		import com.healthysight.VideoPlayer;    import com.healthysight.DropDown;	import com.healthysight.ShareVideoComponent;		public class VideoModule extends MovieClip{				var vp:VideoPlayer; 		var sv:ShareVideoComponent;		var drop:ShareWidget;		var flashVars;				public function VideoModule(){			addEventListener(Event.ADDED_TO_STAGE,go);		}				private function go(evt:Event):void		{			var videoPlayerURL;			removeEventListener(Event.ADDED_TO_STAGE,go);			debugBox.text = videoPlayerURL = "../video/"+String(this.root.loaderInfo.parameters.video);									vp = new VideoPlayer(videoPlayerURL, this.stage);			vp.x=0;			vp.y=0;			sv = new ShareVideoComponent();						stage.addChild(vp);						drop = new ShareWidget();			drop.y = 450;			drop.x = (stage.width/4) -47.5;			stage.addChild(drop);		}			}		}